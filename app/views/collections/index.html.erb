<% provide(:title, 'All collections') %>

<% unless @collections.empty? %>
  <h1>All collections</h1>

  <%= will_paginate %>

  <div class="row">
    <table class="table table-bordered table-hover">
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Description</th>
        <th>Action</th>
      </tr>
      <% @collections.each_with_index do |collection, idx| %>
        <%= render collection, :idx => idx %>
      <% end %>
    </table>
  </div>
  <div class="row" align="center">
    <%= link_to "Create new collectin", new_collection_path, class: "btn btn-lg btn-success" %>
  </div>
<% else %>
  <div class="row">
    <div class="center jumbotron">
      <h1>No collections found. </h1>
      <br/>
      <%= link_to "Create new collectin", new_collection_path, class: "btn btn-lg btn-success" %>
    </div>
  </div>
<% end %>

<%= will_paginate %>